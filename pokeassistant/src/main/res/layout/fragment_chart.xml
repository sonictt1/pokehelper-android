<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bearsoft.pokeassistant.main.MainActivity" >
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adUnitId="ca-app-pub-1577800667746091/3361312561"
        ads:adSize="BANNER"
        android:layout_alignParentTop="true"/>

    <com.bearsoft.pokeassistant.views.TouchImageView
        android:id="@+id/type_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/adView"
        android:src="@drawable/abc_ab_share_pack_holo_light"
        android:contentDescription="Pokemon Type Matchup Chart"/>

</RelativeLayout>
